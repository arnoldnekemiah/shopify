<!-- app/views/products/index.html.erb -->
<div class="container">
<h1>All Products</h1>

<%= link_to "Add New Product", new_product_path, class: "btn btn-success mb-3" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to "View Details", product_path(product), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
